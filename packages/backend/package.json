{
  "name": "delegate-registry-backend",
  "version": "1.0.0",
  "license": "LGPL-3.0+",
  "description": "For computing vote weight for voters in Snapshot proposals",
  "repository": "https://github.com/gnosis/delegate-registry",
  "scripts": {
    "start": "vercel dev ../..",
    "deploy": "vercel deploy",
    "build": "yarn codegen",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,graphql}\"",
    "codegen": "graphclient build && rm -r -f lib/services/the-graph/.graphclient  && mv -f .graphclient lib/services/the-graph",
    "test": "mocha --require ts-node/register lib/**/*.test.ts"
  },
  "dependencies": {
    "@snapshot-labs/snapshot.js": "^0.8.1",
    "@vercel/node": "^2.14.2",
    "@vercel/postgres-kysely": "^0.6.0",
    "ethers": "^5.7.2",
    "kysely": "^0.24.2",
    "node-fetch": "2",
    "ramda": "^0.29.0"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "3.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/ramda": "^0.29.1",
    "chai": "^4.3.7",
    "graphql": "^16.6.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1"
  }
}
